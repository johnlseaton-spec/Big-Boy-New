    <!-- Cart Notification -->
    <div id="toast" class="fixed bottom-10 right-10 bg-yellow-400 text-black font-black px-8 py-4 rounded-md shadow-2xl transform translate-y-32 transition-transform duration-500 z-[100] border-2 border-white/20">
        ADDED TO COUNCIL CART!
    </div>

    <script>
        function addToCart(item) {
            showToast(`Added ${item} to Council Cart!`);
        }

        function showToast(msg) {
            const toast = document.getElementById('toast');
            toast.innerText = msg;
            toast.classList.remove('translate-y-32');
            setTimeout(() => {
                toast.classList.add('translate-y-32');
            }, 3000);
        }

        // Mobile Menu
        const mobileBtn = document.getElementById('mobileMenuBtn');
        mobileBtn.addEventListener('click', () => {
            showToast('Council Mobile Menu Ready Soon');
        });

        // Hero Parallax
        window.addEventListener('scroll', () => {
            const bg = document.querySelector('.hero-bg');
            if(bg) {
                let offset = window.pageYOffset;
                bg.style.backgroundPositionY = offset * 0.4 + 'px';
            }
        });
    </script>
